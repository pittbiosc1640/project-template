# Check http://editorconfig.org for more information

root = true

[*]
indent_style = space
indent_size = 4
trim_trailing_whitespace = true
insert_final_newline = true
charset = utf-8
end_of_line = lf

[*.{py, pyi}]
indent_style = space
indent_size = 4

[*.{yml, yaml}]
indent_size = 2
trim_trailing_whitespace = true

[*.md]
indent_size = 4
trim_trailing_whitespace = true

[LICENSE]
insert_final_newline = false

[*.{diff,patch}]
trim_trailing_whitespace = false
